<!DOCTYPE html>
<html>
<head>
    <title>Film-net</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
    <h1>Film-net</h1>

    <!-- Formularz Użytkownika -->
    <form action="/addUser" method="post">
        <input type="text" name="username" placeholder="Nazwa Użytkownika">
        <input type="email" name="email" placeholder="Email">
        <button type="submit">Dodaj Użytkownika</button>
    </form>

    <!-- Formularz Filmu -->
    <form action="/addMovie" method="post">
        <input type="text" name="title" placeholder="Tytuł Filmu" required>
        <input type="number" name="year" placeholder="Rok Wydania" required>
        <input type="text" name="genre" placeholder="Gatunek" required>
        <button type="submit">Dodaj Film</button>
    </form>
    <!-- Formularz Oceny -->
    <form action="/addRating" method="post">
        <input type="text" name="username" placeholder="Nazwa Użytkownika">
        <input type="text" name="title" placeholder="Tytuł Filmu">
        <input type="number" name="rating" placeholder="Ocena">
        <button type="submit">Dodaj Oceny</button>
    </form>

    <!-- Tabela filmów -->
    <h2>Filmy</h2>
    <table>
        <tr>
            <th>Tytuł</th>
            <th>Rok Wydania</th>
            <th>Gatunek</th>
        </tr>
        <% films.forEach(function(film) { %>
            <tr>
                <td><%= film.title %></td>
                <td><%= film.year %></td>
                <td><%= film.category %></td>
            </tr>
        <% }) %>
    </table>

    <!-- Tabela filmów -->
    <h2>Użytkownicy</h2>
    <table>
        <tr>
            <th>Nazwa użytkownika</th>
            <th>Email</th>
        </tr>
        <% users.forEach(function(user) { %>
            <tr>
                <td><%= user.userName %></td>
                <td><%= user.email %></td>
            </tr>
        <% }) %>
    </table>

    <!-- Tabela ocen użytkowników -->
    <h2>Oceny Użytkowników</h2>
    <table>
        <tr>
            <th>Nazwa Użytkownika</th>
            <th>Tytuł Filmu</th>
            <th>Ocena</th>
        </tr>
        <% userRatings.forEach(function(rating) { %>
            <tr>
                <td><%= rating.userName %></td>
                <td><%= rating.title %></td>
                <td><%= rating.rating %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
